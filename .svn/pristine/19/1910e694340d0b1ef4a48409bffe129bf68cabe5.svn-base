@import "styles.less";

.content{
    height: ~"calc(100% - 70px)";

    >div{
        height: 100%;
    }

    .user-info {
        ul {
            padding-left: 0;
            margin-bottom: 0;

            li {
                float: left;
                margin-bottom: @defaultPadding;
            }
        }
        
        overflow: hidden;
        // background: #eaf1f9;
        font-size: 16px;
    
        .user-content {
            // margin: @defaultPadding @defaultPadding 0 @defaultPadding;
            padding: @defaultPadding @defaultPadding 0 @defaultPadding;
            height: 100%;
            background: #fff;

            .item {
                margin-bottom: @defaultPadding;
                padding-bottom: 30px;
                border-bottom: 1px dashed #c3c3c3;

                h3 {
                    font-weight: bold;
                    margin-left: @defaultPadding;
                }

                span {
                    font-weight: bold;
                    text-align: right;
                    font-size: larger;
                    color: #000;
                }
                button {
                    margin-left: 30px;
                }
            }

            .info {
                float: left;
                margin: 0 75px;
                width: 85%;

                .green {
                    color: #18b63a;
                }
            }

            .operation {
                float: left;
                margin: 0 60px;
                width: 90%;

                li {
                    margin-top: @defaultPadding;

                    button {
                        // width: 130px;
                        // height: 40px;
                        // background: @themeColor;
                        // border: none;

                        span {
                            color: #fff;
                            font-weight: bold;
                        }
                    }

                    .disabled {
                        background: #c3c3c3;
                    }
                }
            }
        }
    }
}
nz-modal {
    li {
        width: 80%;
        margin: 0 auto 30px;
        text-align: center;
        font-size: 16px;

        span {
            display: inline-block;
            width: 15%;
            text-align: right;
            margin-right: @defaultPadding;
        }

        input {
            width: 60%;
            height: 40px;
        }

        textarea {
            width: 60%;
            vertical-align: middle;
            padding: 10px;
        }

        nz-select {
            width: 60%;
            height: 42px;
        }
        
        .ant-select-lg {
            font-size: 14px;
        }
    }   

    .updatePwd {
        span {
            width: 21%;
        }
    }

    .area {
        min-height: 100px;
        
        p {
            margin-bottom: @defaultPadding;
        }
    }

    .red {
        color: red;
    }
    
    .text {
        width: 32%;
        margin-left: 3px;

        span {
            margin: 0;
        }

        .label {
           width: 100%;
           text-align: left;
        }

        .userCode {
            width: auto;
            word-break: break-word;
            text-align: left;
        }
    }

    .clear {
        clear: both;
    }
}

