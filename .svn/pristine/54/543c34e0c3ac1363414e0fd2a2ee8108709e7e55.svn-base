.sidebar{
    width: 100%;
    height: 100%;

    background-color: #337;

    .title{
        width: 100%;
        height: 40px;
        padding: 0 10px 0 30px;
        margin-bottom: 25px;

        line-height: 40px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;

        border-bottom: 1px dashed #fff;
    }

    .subtab-list{
        li{
            width: 100%;
            height: 40px;
            padding: 0 30px;

            align-items: center;
            justify-content: space-between;

            color: #fff;
            font-size: 14px;

            &:hover{
                background-color: #fff;
                opacity: .5;
            }

            div{
                align-items: center;
                justify-content: flex-start;

                img{
                    margin-right: 15px;
                }
            }
        }
    }

    .subbtn{
        width: 100%;
        padding: 0 20px;
        margin-top: 60px;

        color: #fff;
        font-size: 14px;

        li{
            width: 100%;
            height: 42px;
            
            border: 2px solid #fff;
            border-radius: 5px;

            align-items: center;
            justify-content: center;

            background-color: #fff;
            opacity: .5;

            img{
                margin-left: 10px;
            }
        }
    }
}

.actived{
    background-color: #fff3;
}