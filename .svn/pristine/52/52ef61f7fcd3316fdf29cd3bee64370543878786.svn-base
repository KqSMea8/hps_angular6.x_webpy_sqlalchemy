@import "styles.less";
.content{
    height: ~"calc(100% - 70px)";

    >div{
        height: 100%;
    }

    .user-manage {
        ul {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            background: #fff;

            li {
                justify-content: center;
                margin-bottom: @defaultPadding;
            }
        }
        
        overflow: hidden;
        background: #eaf1f9;
        font-size: 14px;

        .manage {
            margin: @defaultPadding @defaultPadding 0;

            .search{
                margin-bottom: @defaultPadding;
                padding-top: @defaultPadding;

                li {
                    margin-right: @defaultPadding;

                    p {
                        margin-bottom: 10px;
                    }

                    input, nz-select {
                        text-align: center;
                    }

                    button {
                        width: 100px;
                        height: 32px;
                        color: #fff;
                        font-weight: bold;
                        background: #f8b551;
                        border: none;
                    }
                }

                .button {
                    align-items: flex-end;
                }
            }

            .table {
                background: #fff;
                width: 100%;
                
                tbody {
                    tr:nth-child(odd) {
                        background: #eaf1f9;
                    }
                }
            }
        }
    }
}