@import "styles.less";

.header{
    background-color: #337;
    height: 70px;
    padding-left: @defaultPadding;
    padding-right: @defaultPadding;

    div{
        height: 100%;
    }

    .header-logo{
        align-items: center;
        justify-content: flex-start;
        
        p{
            color: #fff;
            font-size: 18px;
            margin-left: 12px;
        }
    }

    .header-tab{
        div{
            width: 100px;
            height: 100%;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            
            p{
                color: #fff;
                font-size: 12px;
                margin-top: 7px;
            }
        }

        div:hover{
            background-color: #6739cc;
        }
    }

    .header-info{
        justify-content: flex-end;

        div{
            height: 100%;
            align-items: center;
            padding-left: 40px;
            color: #fff;
            font-size: 14px;
        }
    }
}

.selected{
    background-color: #6739cc;
}