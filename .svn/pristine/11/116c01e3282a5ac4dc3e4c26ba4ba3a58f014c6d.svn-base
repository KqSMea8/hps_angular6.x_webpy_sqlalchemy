.ha-upload {
    //display: flex;
    //justify-content: space-around;
    //padding-left: 20px;
    margin-left: 20px;
    .add-body-f {
        align-items: flex-start;
        display: flex;
        text-align: center;
        width: 40%;
        div {
            .mg(@t:6px,@b:6px,@r:20px);
            display: flex;
