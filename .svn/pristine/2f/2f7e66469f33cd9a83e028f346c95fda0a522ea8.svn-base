@import "styles.less";
.checkin-log-list {
    overflow-y: auto;
    height: 100%;
    background: #eaf1f9;

    ul {
        padding-left: 0;
        margin-bottom: 0;
    }

    h2 {
        font-weight: bold !important;
        margin-bottom: @defaultPadding;
    }

    .hotel-info {
        overflow: hidden;
        background: #fff;

        padding: @defaultPadding;
        margin: @defaultPadding;
        // height: 546px;

        .hotel-name {
            margin-bottom: @defaultPadding;
            padding: 0 @defaultPadding @defaultPadding @defaultPadding;

            border-bottom: 1px dashed #c3c3c3;
        }

        .data-list {
            overflow: hidden;

            display: flex;
            justify-content: center;

            li {
                position: relative;
                
                width: 24%;
                height: 164px;

                margin-left: 1%;

                .absolute {
                    position: absolute;
                    top: 0;
                    left: 0;
                }

                img {
                    .absolute;
                    z-index: 0;

                    width: 100%;
                    height: 100%;
                }

                div {
                    .absolute;
                    z-index: 1;

                    padding: 30px;
                    color: #fff;

                    h2 {
                        color: #fff;
                    }

                    p {
                        font-size: 48px;
                        font-weight: bold;

                        margin-top: 30px;

                    }
                }
            }
        }

        .search-condition {
            margin: @defaultPadding 0;
            padding: @defaultPadding 0 @defaultPadding @defaultPadding;

            ul {
                overflow: hidden;

                display: flex;
                align-items: center;

                li {
                    span {
                        margin: 0 @defaultPadding;
                    }
                }
            }
        }
            
        .filter-button {
            display: flex;
            justify-content: flex-end;
        }
    }

    .search-data-list {
        overflow: hidden;
        background: #fff;
    }
}


