@import "styles.less";
.login {
    width: 100%;
    height: 100%;
    
    .background {
        position: fixed;
        top: 0;
        left: 0;
        z-index: -10;

        width: 100%;
        height: 100%;
        background: url(/assets/img/login-background.png) no-repeat; 
        background-size: cover;
    }

    .title {
        font-size: 60px;
        font-weight: 600;
        letter-spacing: 12px;
        color: #fff;
        text-align: center;

        margin: 200px auto;
    }

    .form {
        padding: @defaultPadding;

        // width: 400px;
        // height: 330px;
        
        width: 340px;
        height: 200px;
        border-radius: 4px;
        //background: #fff;

        .background-opacity{
            width: 100%;
            height: 100%;
            background: #fff;
            opacity: .2;
        }
        .login-form-button {
            width: 100%;
        }
    }
}