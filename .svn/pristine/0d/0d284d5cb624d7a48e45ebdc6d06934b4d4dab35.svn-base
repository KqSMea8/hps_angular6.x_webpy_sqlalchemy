@import "styles.less";
.login {
    
    .background {
        position: fixed;
        top: 0;
        left: 0;
        z-index: -10;

        width: 100%;
        height: 100%;
        background: url(/assets/img/login-background.png) no-repeat; 
        background-size: cover;
    }

    .form {
        top: calc(50% - 260px);

        .title {
            font-size: 60px;
            font-weight: 600;
            letter-spacing: 12px;
            color: #fff;
            text-align: center;
    
            margin: auto;
        }

        .login-form {
            position: relative;
            top: 160px;
            left: calc(50% - 170px);

            overflow: hidden;
            padding: @defaultPadding;

            // width: 400px;
            // height: 330px;
            
            width: 340px;
            height: 210px;
            border-radius: 4px;
            //background: #fff;
        }

        .background-opacity{
            width: 100%;
            height: 100%;
            background: #fff;
            opacity: .2;
        }
        
        .login-form-button {
            width: 100%;
        }
    }
}