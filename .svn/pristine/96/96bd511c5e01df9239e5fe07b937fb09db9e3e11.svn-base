@import "styles.less";
.checkin-log-list {
    h2 {
        font-weight: bold !important;
    }
    overflow: hidden;
    background: #eaf1f9;

    .hotel-info {
        background: #fff;
        margin: @defaultPadding;
        height: 496px;

        .hotel-name {
            margin: @defaultPadding;
            padding: @defaultPadding;

            border-bottom: 1px dashed #c3c3c3;
        }

        .data-list {
            overflow: hidden;

            display: flex;
            justify-content: center;

            padding: @defaultPadding;

            li {
                position: relative;
                
                width: 24%;
                height: 164px;

                margin-left: 1%;

                .absolute {
                    position: absolute;
                    top: 0;
                    left: 0;
                }

                img {
                    .absolute;
                    z-index: 0;

                    width: 100%;
                    height: 100%;
                }

                div {
                    .absolute;
                    z-index: 1;

                    padding: 30px;
                    color: #fff;

                    h2 {
                        color: #fff;
                    }

                    p {
                        font-size: 48px;
                        font-weight: bold;

                        margin-top: 20px;

                    }
                }
            }
        }

        .search-condition {
            margin: @defaultPadding;
            padding: @defaultPadding;

            h2 {
                margin-bottom: @defaultPadding;
            }

            span {

            }
        }
    }
}


