<app-header></app-header>
<div nz-row class="content">
    <div nz-col nzSpan="3">
        <app-sidebar [title]="'系统管理'" [subtab]="m_objSubtab"></app-sidebar>
    </div>
    <div nz-col nzSpan="21" class="log">
        <div class="search-condition">
            <ul class="condition-list">
                <li>
                    <p>用户编号 :</p>
                    <input nz-input [(ngModel)]="m_objSearchLogCondition.objCondition.sWorkCode">
                </li>
                <li>
                    <p>账号 :</p>
                    <input nz-input [(ngModel)]="m_objSearchLogCondition.objCondition.sUserCode">
                </li>
                <li>
                    <p>姓名 :</p>
                    <input nz-input [(ngModel)]="m_objSearchLogCondition.objCondition.sUserName">
                </li>
                <li>
                    <p>岗位 :</p>
                    <input nz-input [(ngModel)]="m_objSearchLogCondition.objCondition.sPost">
                </li>
                <li>
                    <p>日志类型 :</p>
                    <nz-select style="width: 120px;" [(ngModel)]="m_objSearchLogCondition.objCondition.sOperaType" nzAllowClear nzPlaceHolder="">
                        <nz-option nzValue="jack" nzLabel="Jack"></nz-option>
                        <nz-option nzValue="lucy" nzLabel="Lucy"></nz-option>
                        <nz-option nzValue="disabled" nzLabel="Disabled" nzDisabled></nz-option>
                    </nz-select>
                </li>
            </ul>
            <ul class="condition-list">
                <li>
                    <p>日志时间 :</p>
                    <nz-date-picker nzPlaceHolder="请选择日期" [(ngModel)]="m_objSearchLogCondition.objCondition.sDateStart"></nz-date-picker>
                    <span>至</span>
                    <nz-date-picker nzPlaceHolder="请选择日期" [(ngModel)]="m_objSearchLogCondition.objCondition.sDateEnd"></nz-date-picker>
                </li>
                <li>
                    <p>&nbsp;</p>
                    <span>选择</span>
                    <nz-radio-group [(ngModel)]="m_sPeriod" (ngModelChange)="fnChangePeriod()">
                        <label nz-radio nzValue="0">今天</label>
                        <label nz-radio nzValue="1">一周</label>
                        <label nz-radio nzValue="2">一个月</label>
                    </nz-radio-group>
                    <button nz-button nzType="primary" (click)="fnSearchLogList()">查询</button>
                </li>
            </ul>
        </div>
        <div class="search-data-list">
            <nz-table #basicTable [nzData]="dataSet">
                <thead>
                    <tr>
                        <th>账号</th>
                        <th>姓名</th>
                        <th>日志类型</th>
                        <th>日志详情</th>
                        <th>登录IP</th>
                        <th>操作时间</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let item of m_lsSearchLogList.DateSet">
                        <td>{{item.UserCode}}</td>
                        <td>{{item.UserName}}</td>
                        <td>{{item.OperaTypeName}}</td>
                        <td>{{item.KeyWord}}</td>
                        <td>{{item.IP}}</td>
                        <td>{{item.CreateTime}}</td>
                    </tr>
                </tbody>
            </nz-table>
        </div>
        <div class="pagination">
            <nz-pagination [nzPageIndex]="m_objSearchLogCondition.objPageInfo.nPageNo" [nzTotal]="m_lsSearchLogList.PageCount"
                nzShowSizeChanger [nzPageSize]="m_objSearchLogCondition.objPageInfo.nPageSize"></nz-pagination>
        </div>
    </div>
</div>