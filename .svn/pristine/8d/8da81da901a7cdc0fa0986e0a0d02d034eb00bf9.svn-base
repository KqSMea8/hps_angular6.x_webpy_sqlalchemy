        }
    }
    .btn-logoff {
        button {
        }
    }
    .btn-submit {
        button {
        }
    }
    .btn-cencel {
        button {
        }
    }
}

nz-select {
    width: 50%;
}

.ha-body {
    overflow-y: scroll;
    height: 100%;
}

.buttom-width-80 {
    width: 80px;
}

.buttom-width-120 {
    width: 120px;
}

.buttom-width-160 {
    width: 160px;
}

.buttom-width-500 {
    width: 680px;
}

.ha-upload {
    display: flex;
    justify-content: space-around;
    padding-left: 20px;
    border-bottom: 0;
    > div {
        text-align: center;
        div{
            .mg(@t:6px,@b:6px)
        }
        .mg(@t:5px,@b:5px,@r:20px);
        .pd(@b:30px,@t:20px)
    }
}


.ha-dash-line{
    border-top: #ccc 1px dashed;
    .mg(@l:20px,@r:20px)
}





