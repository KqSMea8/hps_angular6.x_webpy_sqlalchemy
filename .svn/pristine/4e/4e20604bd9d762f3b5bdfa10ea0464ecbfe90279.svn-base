@import "styles.less";
.content{
    height: ~"calc(100% - 70px)";

    >div{
        height: 100%;
    }

    .user-manage {
        overflow: scroll;
        background: #eaf1f9;
        font-size: 14px;

        .manage {
            
            ul {
                display: flex;
                justify-content: space-around;
                flex-direction: row;
                align-items: flex-end;
                background: #fff;
    
                li {
                    justify-content: center;
                    margin-bottom: @defaultPadding;
                }
            }

            margin: @defaultPadding @defaultPadding 0;

            .search{
                padding-top: @defaultPadding;

                li {
                    // margin-right: @defaultPadding * 2;

                    p {
                        margin-bottom: 10px;
                    }

                    button {
                        width: 100px;
                        height: 32px;
                        color: #fff;
                        font-weight: bold;
                        background: @themeColor;
                        border: none;
                    }
                }

                .button {
                    align-items: flex-end;
                }
            }

            .table {
                background: #fff;
                width: 100%;
                
                tbody {
                    tr:nth-child(odd) {
                        background: #eaf1f9;
                    }
                }
            }

            .pagination {
                margin-top: @defaultPadding;
                margin-bottom: @defaultPadding;
            }
        }
    }
}
nz-modal {
    li {
        width: 80%;
        margin: 0 auto @defaultPadding;
        text-align: center;
        font-size: 16px;

        span {
            display: inline-block;
            width: 15%;
            text-align: right;
            margin-right: @defaultPadding;
        }

        input {
            width: 60%;
            height: 40px;
        }

        .ant-select-lg {
            font-size: 14px;
        }

        nz-select {
            width: 60%;
            height: 42px;
        }
    }
}
