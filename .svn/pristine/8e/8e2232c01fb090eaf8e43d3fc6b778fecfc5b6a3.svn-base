@import "styles.less";

.content{
    height: ~"calc(100% - 70px)";

    >div{
        height: 100%;
        background-color: #eaf1f9;
        overflow-x: auto;
        overflow-y: auto;

        .breadcrumb-bar{
            background-color: #fff;
            padding: 5px @defaultPadding;
        }

        .main{
            padding: @defaultPadding;

            nz-tabset{
                background-color: #fff;
                padding: 0 @defaultPadding @defaultPadding;
            }

            div[nz-col]{
                flex-direction: column;
                justify-content: center;
                align-items: flex-start;
            }
            
            div.info-card{
                border: 1px solid #ededed;

                p{
                    width: 100%;
                    padding: 10px;

                    font-size: 12px;
                    font-weight: bold;
                    text-align: center;
                    
                    background-color: #ededed;
                }

                .ant-card-body{
                    border-top: 1px solid #ededed;
                }

                .ic-content{
                    li{
                        span{
                            white-space: nowrap;
                            margin-right: 5px;
                            line-height: 26px;
                            font-size: 12px;
                        }

                        span:first-child{
                            color: #888;
                        }

                        span:last-child{
                            font-weight: bold;
                        }
                    }
                }
                .ic-avator{
                    justify-content: center;
                }

                nz-table{
                    width: 100%;
                    text-align: center;
                }
            }
        }
    }
}