@import "styles.less";

.login {
    z-index: -1;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: url("/assets/img/login-background.png") no-repeat; 
    background-size: cover;

    .login-content {
        flex-direction: column;
        align-items: center;
        justify-content: center;

        .title {
            font-size: 60px;
            font-weight: 600;
            letter-spacing: 12px;
            color: #fff;
            text-align: center;
            margin-bottom: 50px;
        }

        .form{
            width: 340px;
            // height: 210px;
            position: relative;
            border-radius: 4px;
            overflow: hidden;

            .bg{
                width: 100%;
                height: 100%;
                position: absolute;
                top: 0;
                left: 0;
                background-color: #fff5;
            }

            .login-form{
                width: 100%;
                height: 100%;
                padding: @defaultPadding @defaultPadding 0;

                .login-form-button {
                    width: 100%;
                }
            }
        }
    }
}