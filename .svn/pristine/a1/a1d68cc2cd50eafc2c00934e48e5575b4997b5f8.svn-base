@import "styles.less";
.content{
    height: ~"calc(100% - 70px)";

    >div{
        height: 100%;
    }

    .user-info {
        ul {
            padding-left: 0;
            margin-bottom: 0;

            li {
                float: left;
                margin-bottom: @defaultPadding;
            }
        }
        
        overflow: hidden;
        background: #eaf1f9;
        font-size: 16px;
    
        .user-content {
            margin: @defaultPadding @defaultPadding 0 @defaultPadding;
            padding: @defaultPadding @defaultPadding 0 @defaultPadding;
            height: 100%;
            background: #fff;

            .item {
                margin: @defaultPadding;
                padding-bottom: 30px;
                border-bottom: 1px solid #c3c3c3;

                h3 {
                    font-weight: bold;
                    margin-left: @defaultPadding;
                }

                span {
                    font-weight: bold;
                    text-align: right;
                }
            }

            .info {
                float: left;
                margin: 0 75px;
                width: 85%;

                .green {
                    color: #18b63a;
                }
            }

            .operation {
                float: left;
                margin: 0 60px;
                width: 90%;

                li {
                    margin-top: @defaultPadding;

                    button {
                        width: 130px;
                        height: 40px;
                        background: @themeColor;
                        border: none;

                        span {
                            color: #fff;
                            font-weight: bold;
                        }
                    }

                    .disabled {
                        background: #c3c3c3;
                    }
                }
            }
        }
    }
}
nz-modal {
    li {
        width: 80%;
        margin: 0 auto @defaultPadding;
        text-align: center;
        font-size: 16px;

        span {
            display: inline-block;
            width: 20%;
            text-align: right;
            margin-right: @defaultPadding;
        }

        .userCode {
            width: 60%;
            height: 40px;
            margin: 0;
            text-align: left;
        }

        input {
            width: 60%;
            height: 40px;
        }

        textarea {
            width: 60%;
            vertical-align: middle;
            padding: 10px;
        }

        nz-select {
            width: 60%;
            height: 42px;
        }
        
        .ant-select-lg {
            font-size: 14px;
        }
    }    

    .ant-checkbox-wrapper {
        margin-right: 20px !important; 
    }

    .area {
        min-height: 100px;
        
        p {
            margin-bottom: @defaultPadding;
        }

        label {
            margin-right: 20px;
        }
    }
}

.area {
    min-height: 100px;
    
    p {
        margin-bottom: @defaultPadding;
    }

    
    nz-checkbox-group {
        display: flex;
        
        .ant-checkbox-wrapper {

            margin-right: 20px !important;
        }

    }
}
