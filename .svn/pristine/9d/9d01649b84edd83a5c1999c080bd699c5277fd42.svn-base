@import "styles.less";

.header{
    background-color: @themeColor;
    height: 70px;
    padding: 0 @defaultPadding;
    justify-content: space-between;

    a{
        color: #fff;
    }
    
    div{
        height: 100%;
    }

    .header-logo-tabs{
        align-items: center;
        justify-content: flex-start;

        .header-logo{
            align-items: center;
            justify-content: flex-start;
            min-width: 230px;
            cursor: pointer;
            
            p{
                color: #fff;
                font-size: 18px;
                margin-left: 12px;
            }
        }

        .header-tab{
            div{
                width: 100px;
                height: 100%;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                
                i{
                    font-size: 24px;
                    color: #fff;
                }

                p{
                    color: #fff;
                    font-size: 12px;
                    margin-top: 7px;
                }
            }

            div:hover{
                background-color: #55b;
            }
        }
    }

    

    .header-info{
        justify-content: flex-end;
        height: 100%;
        align-items: center;
        color: #fff;
        font-size: 14px;

        div{
            padding-left: 40px;
            align-items: center;
            justify-content: flex-end;
            cursor: pointer;

            span{
                margin-right: 8px;
            }

            i{
                font-size: 18px;
            }
        }

        .logout:hover{
            color: #aaa;
        }
    }
}

.selected{
    background-color: #55b;
}