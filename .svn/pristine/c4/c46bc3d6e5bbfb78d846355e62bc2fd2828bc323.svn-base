    };


    fnUploadImg(formData: any): void {
        // console.log(formData);
        // const data = new UploadImg();
        // data.image = formData;
        console.log('到这里了');
        // this.m_objHttpClient.post('http://10.3.15.36:8090/api/Hotel/UploadImg', formData);
        this.m_objApiService.fnUploadImg(formData).subscribe(data => {
            if (data.Code === 200) {
                this.fnGetHotelDetail(this.nHotelID);
                this.m_objToolsService.fnDoSuccessReturnTips('上传成功');
            } else {
                this.m_objToolsService.fnErrorReturnTips(data.Msg);
            }
        });
    }

    SpecialIndustriesHandlePreview = (file: UploadFile) => {
        this.SpecialIndustriesImage = file.url || file.thumbUrl;
        this.SpecialIndustriesVisible = true;
    }


